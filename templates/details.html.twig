{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 ">
            <div class="card">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" action="{{ path('add_to_favorites', {'id': movie.id}) }}">
                            <button type="submit">Ajouter aux favoris</button>
                        </form>
                        <img src="{{ movie.picturePath }}" class="card-img-top img-fluid img-thumbnail" alt="{{ movie.title }}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-center">{{ movie.title }}</h5>
                            <p class="card-text">Avis : </p>
                            <p class="card-text text-justify text-sm">{{ movie.overview }}</p>
                            <p class="card-text"><small class="">Date de sortie : {{ movie.releaseDate|date('d/m/Y') }}</small></p>
                            <p class="card-text">Langue :
                                <small class="">
                                    {% if movie.originalLanguage == "en" %}
                                        Anglais
                                    {% elseif movie.originalLanguage == "pl" %}
                                        Polonais
                                    {% else %}
                                        Français
                                    {% endif %}
                                </small>
                            </p>
                            <p class="card-text">
                                Note : {{ movie.voteAverage }}/10

                                {% set numberOfStars = movie.voteAverage|round %}
                                {% set numberOfEmptyStars = 10 - numberOfStars %}

                                {% for i in 1..numberOfStars %}
                                    <i class="fas fa-star text-warning"></i>
                                {% endfor %}

                                {% for i in 1..numberOfEmptyStars %}
                                    <i class="far fa-star text-warning"></i>
                                {% endfor %}
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    {% if movie.isAdult == true %}
                                        Ce film est pour adultes.
                                    {% else %}
                                        Ce film est adapté à tous les publics.
                                    {% endif %}
                                </small>
                            </p>
                            <h3>Acteur :</h3>
                            <ul>
                                {% for actor in actors %}
                                    <img src="{{ actor.urlPicture }}">
                                    <li>{{ actor.name }} - {{ actor.gender }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
