{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="text-center m-5 text-white">Résultats de la recherche pour "<span class="text-danger">{{ searchTerm }}</span>"</h1>
    {% if searchResults.results > 0 %}
        <div class="container mt-4">
            <div class="row">
                {% for movie in searchResults.results %}
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="https://image.tmdb.org/t/p/original{{ movie.poster_path }}" alt="{{ movie.title }}" href="{{ path('movie_details', {'id': movie.id }) }}">
                            <div class="card-title-overlay">
                                <a class="text-decoration-none" href="{{ path('movie_details', {'id': movie.id }) }}">
                                    <h5 class="card-title text-center custom-title">{{ movie.title }}</h5>
                                </a>
                                <p>{{ movie.overview }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <p>Aucun résultat trouvé pour "{{ searchTerm }}".</p>
    {% endif %}

    <a href="{{ path('popularFilm') }}">Retour à la page d'accueil</a>

{% endblock %}

{% block stylesheets %}
<style>
    .card {
        position: relative;
        overflow: hidden;
    }

    .card-title-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        text-align: center;
        padding: 10px;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .card:hover .card-title-overlay {
        opacity: 1;
        transition: opacity 0.3s;
    }

    .card img {
        transition: filter 0.3s;
    }

    .card:hover img {
        filter: blur(5px);
        transition: filter 0.3s;
    }
</style>
{% endblock %}